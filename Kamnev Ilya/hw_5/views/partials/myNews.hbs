<div class="row">
    {{#each news}}
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.content}}</p>
                <a href="{{this.href}}" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
     </div>
    {{/each}}
</div>